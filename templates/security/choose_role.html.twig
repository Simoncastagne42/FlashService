{% extends 'base.html.twig' %}

{% block title %}Choisissez votre type de compte
{% endblock %}

{% block body %}


<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded shadow-md">
        <h1 class="text-xl font-bold mb-4">Bienvenue !</h1>
        <h2 class="mb-6 font-semibold ">Choisissez votre type de compte pour continuer :</h2>

 <form method="POST" action="{{ path('app_choose_role') }}">
            <div class="flex flex-col gap-4">
                <button type="submit" name="role" value="ROLE_CLIENT"
                    class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded shadow-sm transition duration-200">
                  Client
                </button>

                <button type="submit" name="role" value="ROLE_PROFESSIONNEL"
                    class="bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-4 rounded shadow-sm transition duration-200">
                    Professionnel
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}