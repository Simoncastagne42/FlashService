{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-blue-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Inscription</h1>

        {{ form_start(registrationForm) }}

        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300'}}) }}
            {% if form_errors(registrationForm.email) %}
                <ul class="text-red-500 text-sm mt-1 list-disc list-inside">
                    {{ form_errors(registrationForm.email) }}
                </ul>
            {% endif %}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300'}}) }}
            {% if form_errors(registrationForm.plainPassword.first) %}
                <ul class="text-red-500 text-sm mt-1 list-disc list-inside">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </ul>
            {% endif %}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300'}}) }}
            {% if form_errors(registrationForm.plainPassword.second) %}
                <ul class="text-red-500 text-sm mt-1 list-disc list-inside">
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </ul>
            {% endif %}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.role, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(registrationForm.role, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300'}}) }}
            {% if form_errors(registrationForm.role) %}
                <ul class="text-red-500 text-sm mt-1 list-disc list-inside">
                    {{ form_errors(registrationForm.role) }}
                </ul>
            {% endif %}
        </div>

        <div class="mb-4 flex items-start space-x-2 text-sm">
            {{ form_widget(registrationForm.rgpdConsent) }}
            <label for="{{ registrationForm.rgpdConsent.vars.id }}">
                J'accepte la
                <a href="{{ path('app_privacy_policy') }}" class="underline text-blue-400 hover:text-blue-600" target="_blank" rel="noopener noreferrer">
                    politique de confidentialité
                </a>
            </label>
        </div>
        {% if form_errors(registrationForm.rgpdConsent) %}
            <ul class="text-red-500 text-sm mt-1 list-disc list-inside">
                {{ form_errors(registrationForm.rgpdConsent) }}
            </ul>
        {% endif %}

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded mt-4">
            Créer un compte
        </button>

        {{ form_end(registrationForm) }}

        <div class="text-center mt-5">
            <p class="text-sm text-gray-800 flex flex-col gap-1">
                Déjà un compte ?
                <a href="{{ path('app_login') }}" class="font-bold text-blue-600 hover:text-blue-700">
                    Connexion
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}