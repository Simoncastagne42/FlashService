{% extends 'base.html.twig' %}

{% block title %}Réserver {{ service.name }} | FlashServices{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 py-10 flex flex-col md:flex-row gap-10">

    {# Partie gauche : informations sur le service #}
    <div class="w-full md:w-2/3 space-y-6">
        <h1 class="text-3xl font-bold text-gray-800">{{ service.name }}</h1>

        <p class="text-lg text-gray-800 leading-relaxed">
            {{ service.description }}
        </p>

        <ul class="space-y-3 text-gray-800 text-base">
            <li><strong>Prix :</strong> {{ (service.price / 100)|number_format(2, ',', '.') }} €</li>
            <li><strong>Ville :</strong> {{ service.professional.cityCompagny }}</li>
            <li><strong>Professionnel :</strong> {{ service.professional.compagnyName }}</li>
        </ul>
    </div>

    {# Partie droite : formulaire de réservation #}
    <div class="w-full md:w-1/3 bg-white p-6 rounded-xl shadow-lg border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Choisissez un créneau</h2>

        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.timeSlot, 'Créneau disponible', {'label_attr': {'class': 'block text-sm font-medium text-gray-800'}}) }}
            {{ form_widget(form.timeSlot, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.timeSlot) }}
        </div>

        <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-200">
            Confirmer la réservation
        </button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}