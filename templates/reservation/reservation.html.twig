{% extends 'base.html.twig' %}

{% block title %}Réserver un service{% endblock %}

{% block body %}
<div class="min-h-screen max-w-6xl mx-auto mt-10 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {# INFOS DU SERVICE #}
        <div class="bg-gray-50 p-6 rounded-2xl shadow-inner border">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Détails du service</h2>

            <p class="text-gray-700 mb-2"><span class="font-semibold">Nom :</span> {{ service.name }}</p>

            {% if service.description %}
                <p class="text-gray-700 mb-2 break-words">
                    <span class="font-semibold">Description :</span><br>
                    {{ service.description|nl2br }}
                </p>
            {% endif %}

            <p class="text-gray-700 mb-2">
                <span class="font-semibold">Prix :</span> {{ (service.price / 100)|number_format(2, '.', ' ') }} €
            </p>

            {% if service.professional %}
                <p class="text-gray-700 mt-4">
                    <span class="font-semibold">Proposé par :</span><br>
                    {{ service.professional.compagnyName() }}
                </p>
            {% endif %}
        </div>
  {# FORMULAIRE DE RÉSERVATION #}
        <div class="bg-white p-6 rounded-2xl shadow-md">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">
                Réserver : {{ service.name }}
            </h1>

            {{ form_start(form) }}
    <pre>
    </pre>
            <div class="mb-4">
                {{ form_label(form.timeSlot, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-1'}}) }}
                {{ form_widget(form.timeSlot, {'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}}) }}
                {{ form_errors(form.timeSlot) }}
            </div>

        

            <div class="flex justify-center">
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition duration-200">
                    Envoyer la réservation
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
