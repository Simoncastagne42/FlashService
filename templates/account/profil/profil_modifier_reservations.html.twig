{% extends 'account/base_my_account.html.twig' %}

{% block content_account %}
  <div class="max-w-xl mx-auto mt-10">
        <h1 class="text-2xl font-bold mb-6 text-center">Modifier la Réservation</h1>

        {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
        
        <div>
            {{ form_label(form.timeSlot, 'Créneau horaire', { label_attr: { class: 'block text-sm font-medium text-gray-800' } }) }}
            {{ form_widget(form.timeSlot, { attr: { class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2' } }) }}
            {{ form_errors(form.timeSlot) }}
        </div>

        <div class="flex justify-between items-center">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow">
                Enregistrer les modifications
            </button>
            <a href="{{ path('app_profil_reservations') }}" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow">
                Annuler les modifications
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}